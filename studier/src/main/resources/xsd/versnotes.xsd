<?xml version="1.0"?>
<schema xmlns="http://www.w3.org/2001/XMLSchema"
        xmlns:vs="http://org.harry.jesus/versnotes/1.0"
        xmlns:xs="http://www.w3.org/2001/XMLSchema"
        targetNamespace="http://org.harry.jesus/versnotes/1.0"
        elementFormDefault="qualified">
    <element name="versnotes">
        <complexType>
            <choice minOccurs="0" maxOccurs="unbounded">
                <element name="versenote" type="vs:Note"/>
            </choice>
        </complexType>
    </element>

    <complexType name="Vers">
        <sequence>
            <element name = "vers" type="xs:integer" minOccurs="1" maxOccurs="unbounded"/>
            <element name="vtext" type="xs:string"/>
        </sequence>

        <attribute  name = "book" type="xs:integer" use="required"/>
        <attribute name = "chapter" type="xs:integer" use="required"/>
        <attribute name="style" type="xs:string" use="optional"/>
    </complexType>

    <complexType name="Note" >
        <sequence>
            <element name="verslink" type = "vs:Vers" minOccurs="0" maxOccurs="unbounded"/>
            <element name="note" type="string"/>
        </sequence>
    </complexType>


</schema>